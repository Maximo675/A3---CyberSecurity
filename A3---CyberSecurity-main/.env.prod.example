# Production environment variables (example)
# Copy to your deployment environment and set real values securely.

# Strong random value (e.g., openssl rand -hex 32)
SECRET_KEY=
DB_NAME=doacoes_app

# Security
FORCE_HTTPS=true
STRICT_HSTS=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax
CSP_MODE=strict
ALLOW_UNSIGNED_WEBHOOKS=false
WEBHOOK_TOLERANCE_MINUTES=5

# Webhook
PAYMENT_WEBHOOK_SECRET=
GATEWAY_PROVIDER=sandbox

# Optional anti-replay backend via Redis
WEBHOOK_NONCE_BACKEND=redis
REDIS_URL=
